{
    "info": {
        "_postman_id": "marketplace-api-collection",
        "name": "DevMark - Marketplace API",
        "description": "Complete marketplace API collection for buying/selling approved projects",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "auth": {
        "type": "bearer",
