                    "response": []
                },
                {
                    "name": "6. Buy Project (Different User)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    console.log('✅ Step 6: Project purchased! Workflow complete!');",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
