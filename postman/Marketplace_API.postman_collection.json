                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "marketplace",
                                "search"
                            ],
                            "query": [
                                {
                                    "key": "search",
                                    "value": "website"
                                },
                                {
                                    "key": "sortBy",
                                    "value": "price",
                                    "description": "Options: createdAt, price, title"
                                },
                                {
                                    "key": "order",
                                    "value": "asc",
                                    "description": "Options: asc, desc"
                                },
                                {
                                    "key": "category",
