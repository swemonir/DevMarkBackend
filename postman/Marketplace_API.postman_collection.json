                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{buyer_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "POST",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/marketplace/{{listing_id}}/buy",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "marketplace",
                                "{{listing_id}}",
                                "buy"
                            ]
                        },
                        "description": "Step 6: Buyer purchases (soldTo: buyer, isForSale: false) - Use buyer_token!"
