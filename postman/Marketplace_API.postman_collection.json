                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "marketplace"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                },
                                {
                                    "key": "limit",
                                    "value": "10"
                                },
                                {
                                    "key": "category",
                                    "value": "web-development",
                                    "disabled": true
                                },
                                {
                                    "key": "minPrice",
                                    "value": "1000",
                                    "disabled": true
                                },
                                {
                                    "key": "maxPrice",
                                    "value": "10000",
                                    "disabled": true
                                },
                                {
                                    "key": "search",
                                    "value": "ecommerce",
                                    "disabled": true
                                }
                            ]
                        },
                        "description": "Browse all available marketplace listings (approved projects for sale)"
                    },
                    "response": []
