                {
                    "name": "Get All Marketplace Listings",
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/marketplace?page=1&limit=10",
