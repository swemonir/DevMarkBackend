        {
            "name": "Complete Workflow Example",
            "item": [
                {
                    "name": "1. Create Project",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 201) {",
                                    "    const response = pm.response.json();",
                                    "    pm.environment.set('project_id', response.data._id);",
                                    "    console.log('✅ Step 1: Project created (draft)');",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Premium E-commerce Platform\",\n  \"description\": \"Full-featured e-commerce with advanced features\",\n  \"category\": \"web-development\",\n  \"price\": 5000,\n  \"deliveryTime\": 30\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/projects",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "projects"
                            ]
                        },
                        "description": "Step 1: Create project (status: draft)"
                    },
                    "response": []
                },
                {
                    "name": "2. Submit Project for Review",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    console.log('✅ Step 2: Project submitted for review');",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/projects/{{project_id}}/submit",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "projects",
                                "{{project_id}}",
                                "submit"
                            ]
                        },
                        "description": "Step 2: Submit for admin review (status: submitted)"
                    },
                    "response": []
                },
                {
                    "name": "3. Admin Approve Project",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    console.log('✅ Step 3: Project approved by admin');",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{admin_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "PUT",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/projects/{{project_id}}/approve",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "projects",
                                "{{project_id}}",
                                "approve"
                            ]
                        },
                        "description": "Step 3: Admin approves (status: approved) - Use admin_token!"
                    },
                    "response": []
                },
                {
                    "name": "4. List in Marketplace",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 201) {",
                                    "    const response = pm.response.json();",
                                    "    pm.environment.set('listing_id', response.data._id);",
                                    "    console.log('✅ Step 4: Listed in marketplace');",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"projectId\": \"{{project_id}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/marketplace",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "marketplace"
                            ]
                        },
                        "description": "Step 4: List approved project for sale (isForSale: true)"
                    },
                    "response": []
                },
                {
                    "name": "5. Browse Marketplace",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
