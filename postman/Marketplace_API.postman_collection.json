                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/marketplace",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "marketplace"
                            ]
                        },
                        "description": "Step 5: Public can browse (no auth needed)"
