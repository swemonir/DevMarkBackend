            "description": "Public routes - No authentication required"
        },
        {
            "name": "Seller Routes",
            "item": [
                {
                    "name": "List Project in Marketplace",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 201) {",
                                    "    const response = pm.response.json();",
                                    "    pm.environment.set('listing_id', response.data._id);",
                                    "    console.log('✅ Listing created with ID:', response.data._id);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"projectId\": \"{{project_id}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/marketplace",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "marketplace"
                            ]
                        },
                        "description": "List your approved project in marketplace for sale. Project must be approved first."
                    },
                    "response": []
                },
                {
                    "name": "Update Listing",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Updated E-commerce Website with Premium Features\",\n  \"description\": \"Full-stack e-commerce with payment gateway, admin panel, and analytics\",\n  \"price\": 6000,\n  \"deliveryTime\": 40\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/marketplace/{{listing_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "marketplace",
                                "{{listing_id}}"
                            ]
                        },
                        "description": "Update your marketplace listing (only if not sold)"
                    },
                    "response": []
                },
                {
                    "name": "Remove Listing from Marketplace",
                    "request": {
                        "method": "DELETE",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/marketplace/{{listing_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "marketplace",
                                "{{listing_id}}"
                            ]
                        },
                        "description": "Unlist project from marketplace (project remains, just not for sale)"
                    },
                    "response": []
                }
            ],
            "description": "Routes for sellers to manage their listings"
